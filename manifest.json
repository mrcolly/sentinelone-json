{
  "manifest_version": 3,
  "name": "SentinelOne JSON Viewer",
  "version": "1.0.0",
  "description": "Display SentinelOne event logs in JSON format",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.sentinelone.net/*"
      ],
      "js": ["build/content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
